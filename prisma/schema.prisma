generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String
  stock       Int      @default(0)
  images      String[]
  createdAt   DateTime @default(now())
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String?
  role  String @default("CUSTOMER") // "CUSTOMER" or "VENDOR"
}